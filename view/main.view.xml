<core:View xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" 
xmlns="sap.m" controllerName="testcamera.view.main">
	<Page title="Camera test">
		<content>
		    <HBox width="100%" id="__hbox0" justifyContent="SpaceBetween">
		        <items>
		            <Button text="Take a photo" width="150px" id="__button1" press="capturePhoto">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data5"/>
		                </layoutData>
		            </Button>
		            <Button text="Pick from gallery" width="150px" id="__button0" press="getPhoto">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data4"/>
		                </layoutData>
		            </Button>
		        </items>
		    </HBox>
		    <HBox width="100%" id="__hbox3" justifyContent="Center">
		        <items>
		            <Image width="200px" height="200px" id="myImage">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data6"/>
		                </layoutData>
		            </Image>
		        </items>
		    </HBox>
		    <HBox width="100%" id="__hbox4">
		        <items>
		            <Label text="Latitude" width="100%" id="label01">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data7"/>
		                </layoutData>
		            </Label>
		            <Text text="Press the button to get the position!" maxLines="0" id="txtLatitude">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data8"/>
		                </layoutData>
		            </Text>
		        </items>
		    </HBox>
		    <HBox width="100%" id="__hbox5">
		        <items>
		            <Label text="Longitude" width="100%" id="label02">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data9"/>
		                </layoutData>
		            </Label>
		            <Text text="Press the button to get the position!" maxLines="0" id="txtLongitude">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data10"/>
		                </layoutData>
		            </Text>
		        </items>
		    </HBox>
		    <HBox width="100%" id="__hbox6">
		        <items>
		            <Label text="Altitude" width="100%" id="label03">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data11"/>
		                </layoutData>
		            </Label>
		            <Text text="Press the button to get the position!" maxLines="0" id="txtAltitude">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data12"/>
		                </layoutData>
		            </Text>
		        </items>
		    </HBox>
		    <HBox width="100%" id="__hbox7" justifyContent="Center">
		        <items>
		            <Button text="Get the current position" width="200px" id="__button2" press="getPosition">
		                <layoutData>
		                    <FlexItemData alignSelf="Stretch" id="__data13"/>
		                </layoutData>
		            </Button>
		        </items>
		    </HBox>
		</content>
	</Page>
</core:View>